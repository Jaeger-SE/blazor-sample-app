<NavLink href="@Url" class="nav-link block py-1 md:py-3 pl-1 align-middle text-gray-200 no-underline hover:text-pink-500 border-b-2 border-gray-800 md:border-gray-900 hover:border-pink-500" Match="NavLinkMatch.All">
    <span class="text-l pr-0 md:pr-5"><i class="fas fa-link"></i></span><span>@(Title ?? "== Not set == ")</span>
</NavLink>

@code {
    [Parameter]
    public string? Title { get; set; }
    [Parameter]
    public string? Url { get; set; }
}
